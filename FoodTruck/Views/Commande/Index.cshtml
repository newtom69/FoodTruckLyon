@using FoodTruck.Models
@using System.Globalization
@model Commande
@{
    ViewBag.Title = "FoodTruckLyon - Commande";
}

@if (Model.ModeLivraison=="") //DETTE TECHNIQUE -> une commande peut potentiellement avoir un prix à 0 avec remise et cie => mettre Model.DateCommande==0 ??
{
    <h4>Vous ne pouvez pas commander si votre panier est vide.</h4>
    <h4>Venez le remplir en <a href="/Article">découvrant notre carte.</a></h4>
}

@if (Model.PrixTotal!=0)
{
    <h3>Commande numéro <b>@Model.Id</b> confirmée. Merci !</h3>
    <td>
        @if (Model.UtilisateurId == 0)
        {
            <p class="messageInfo">Vous n'avez pas utilisé de compte client. Merci de bien noter votre numéro de commande</p>
        }
        <p>Votre commande a été passée le @Model.DateCommande.ToString(new System.Globalization.CultureInfo("fr-FR")).</p>
        <p>Date de la livraison&nbsp;: le @Model.DateLivraison.ToString("dd/MM/yyyy HH:mm").</p>
        <p>Mode de livraison&nbsp;: @Model.ModeLivraison</p>
    </td>
}