
@{
    ViewBag.Title = "FoodTruck-Lyon - Création de votre compte";
}

<h2>Création de votre compte</h2>

<h4>Créez un compte pour profiter de l'ensemble de nos services FoodTruck-Lyon.</h4>

@using (Html.BeginForm("Creation", "Utilisateur",
    new { ReturnUrl = ViewBag.ReturnUrl },
    FormMethod.Post, new { @class = "ccform connexion creationCompte" }))
{
    @Html.AntiForgeryToken()
    if (ViewBag.MdpIncorrect != null && ViewBag.MdpIncorrect)
    {
        <p><font color="red">Mauvais choix de mots de passe. Veuillez réessayer s'il vous plait (>8 caractères et identiques).</font></p>
    }
    if (ViewBag.MauvaisEmailMdp != null && ViewBag.MauvaisEmailMdp)
    {
        <p><font color="red">Compte déjà existant. Veuillez saisir une autre adresse mail ou vous <a href="/Utilisateur/Connexion">connecter</a>.</font></p>
    }



    <div class="ccfield-prepend">
        <span class="ccform-addon"><i class="fa fa-envelope fa-2x"></i></span>
        @if (ViewBag.Email != null)
        {
            <input class="ccformfield" name="Email" type="email" placeholder="Email" maxlength='80' required value="@ViewBag.Email">
        }
        else
        {
            <input class="ccformfield" name="Email" type="email" placeholder="Email" maxlength='80' required>
        }
    </div>
    <div class="ccfield-prepend">
        <span class="ccform-addon"><i class="fa fa-key fa-2x"></i></span>
        <input class="ccformfield" name="Mdp" type="password" placeholder="Mot de passe" maxlength='20' required>
    </div>
    <div class="ccfield-prepend">
        <span class="ccform-addon"><i class="fa fa-key fa-2x"></i></span>
        <input class="ccformfield" name="Mdp2" type="password" placeholder="Confirmer le mot de passe" maxlength='20' required>
    </div>
    <div class="ccfield-prepend">
        <span class="ccform-addon"><i class="fa fa-user fa-2x"></i></span>
        @if (ViewBag.Nom != null)
        {
            <input class="ccformfield" name="Nom" type="text" placeholder="Nom" maxlength='30' required value="@ViewBag.Nom">
        }
        else
        {
            <input class="ccformfield" name="Nom" type="text" placeholder="Nom" maxlength='30' required>
        }
    </div>
    <div class="ccfield-prepend">
        <span class="ccform-addon"><i class="fa fa-user fa-2x"></i></span>
        @if (ViewBag.Prenom != null)
        {
            <input class="ccformfield" name="Prenom" type="text" placeholder="Prénom" maxlength='30' required value="@ViewBag.Prenom">
        }
        else
        {
            <input class="ccformfield" name="Prenom" type="text" placeholder="Prénom" maxlength='30' required>
        }
    </div>
    <div class="ccfield-prepend">
        <span class="ccform-addon"><i class="fa fa-mobile fa-2x"></i></span>
        @if (ViewBag.Telephone != null)
        {
            <input class="ccformfield" name="Telephone" type="tel" placeholder="Téléphone" maxlength='10' required value="@ViewBag.Telephone">
        }
        else
        {
            <input class="ccformfield" name="Telephone" type="tel" placeholder="Téléphone" maxlength='10' required>
        }

    </div>
    <div class="ccfield-prepend">
        <input class="ccbtn" type="submit" value="Creation">
    </div>
}